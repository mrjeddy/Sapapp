<mvc:View
controllerName="sap.ui.testapp.controller.ItemInfo"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		title="Детализация"
        showNavButton="true"
		navButtonPress=".onNavBack">
        <Panel
            class="sapUiResponsiveMargin"
            width="auto">
            <content>
                <FormattedText
                    id="item_name"
                    htmlText="Название"/>
                <FormattedText
                    id="item_prod"
                    class="sapUiResponsiveMargin"
                    htmlText="Производитель"/>
                <FormattedText
                    id="item_price"
                    class="sapUiResponsiveMargin"
                    htmlText="Цена:"/>
                <FormattedText
                    id="item_cal"
                    class="sapUiResponsiveMargin"
                    htmlText="Калорийность"/>
                <FormattedText
                    htmlText="Описание:"/>
                <FormattedText
                    id="item_desc"
                    htmlText="Описание"
                    class="sapUiResponsiveMargin"/>
            </content>
        </Panel>
	</Page>
</mvc:View>